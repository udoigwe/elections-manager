<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <div class="container-fluid">
        <div class="form-head d-flex flex-wrap mb-sm-4 mb-3 align-items-center">
            <div class="me-auto  d-lg-block mb-3">
                <h2 class="text-black mb-0 font-w700">Candidates</h2>
                <p class="mb-0">Manage All Candidates Here </p>
            </div>
            <!-- Update Candidate -->
            <div class="modal fade" id="editModal">
                <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <center>
                                <div class="image">
                                    <img height="200" width="200" class="img-circle img-fluid rounded-circle candidate_image" />
                                </div>
                            </center>
                            <br><br>
                            <form id="update-candidate">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Election</label>
                                        <select name="election_id" class="form-control required election_id">
                                            <option selected>Choose...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Candidate Image</label>
                                        <input type="file" name="avatar" class="form-control avatar">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Candidate Full Name</label>
                                        <input type="text" name="candidate_fullname" class="form-control required candidate_fullname">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Candidate Status</label>
                                        <select name="candidate_status" class="form-control required candidate_status">
                                            <option value="">Choose...</option>
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group cold-md-12">
                                    <label>Candidate Biography</label>
                                    <textarea class="form-control required candidate_bio" name="candidate_bio" rows="8"></textarea>
                                </div>
                                <input type="hidden" name="candidate_id" class="required candidate_id" />                           
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add A Candidate</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form id="new-candidate">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Election</label>
                                        <select name="election_id" class="form-control required election_id">
                                            <option selected>Choose...</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Candidate Image</label>
                                        <input type="file" id="avatar" name="avatar" class="form-control required">
                                    </div>
                                </div>
                                <div class="form-group cold-md-12">
                                    <label>Candidate Full Name</label>
                                    <input type="text" id="candidate_fullname" name="candidate_fullname" class="form-control required">
                                </div>
                                <div class="form-group cold-md-12">
                                    <label>Candidate Biography</label>
                                    <textarea class="form-control required" id="candidate_bio" name="candidate_bio" rows="8" id="comment"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>	
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Filter Candidates</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form id="candidate-filter">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Election</label>
                                        <select name="election_id" class="form-control election_id">
                                            <option value="">All</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Candidate Status</label>
                                        <select name="candidate_status" class="default-select form-control candidate_status">
                                            <option value="">All</option>
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Filter</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Candidates</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="candidates" class="display table table-striped" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>SNO</th>
                                        <th>Avatar</th>
                                        <th>Election Title</th>
                                        <th>Candidate Full Name</th>
                                        <th>Votes</th>
                                        <th>Created At</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <th>SNO</th>
                                        <th>Avatar</th>
                                        <th>Election Title</th>
                                        <th>Candidate Full Name</th>
                                        <th>Votes</th>
                                        <th>Created At</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>	
</div>

<script src="/js/pages/admin/candidates.js"></script>
<!--**********************************
    Content body end
***********************************-->