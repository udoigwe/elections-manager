<div class="content-body">
    <div class="container-fluid">
        <div class="form-head d-flex flex-wrap mb-sm-4 mb-3 align-items-center">
            <div class="me-auto  d-lg-block mb-3">
                <h2 class="text-black mb-0 font-w700">Users</h2>
                <p class="mb-0">Manage All Users Here </p>
            </div>
            <!-- Update Candidate -->
            <div class="modal fade" id="editModal">
                <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="update-user">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>First Name</label>
                                        <input type="text" name="user_firstname" class="form-control required user_firstname">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Last Name</label>
                                        <input type="text" name="user_lastname" class="form-control required user_lastname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label>Email Address</label>
                                        <input type="text" name="user_email" class="form-control required user_email">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Status</label>
                                        <select name="user_status" class="form-control default-select required user_status">
                                            <option value="">Choose...</option>
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label>Role</label>
                                        <select name="user_role" class="form-control default-select required user_role">
                                            <option value="">Choose...</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Voter">Voter</option>
                                        </select>
                                    </div>
                                </div>
                                <input type="hidden" name="user_id" class="required user_id" />                           
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add A User</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form id="new-user">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>First Name</label>
                                        <input type="text" name="user_firstname" class="form-control required user_firstname">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Last Name</label>
                                        <input type="text" name="user_lastname" class="form-control required user_lastname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Email Address</label>
                                        <input type="text" name="user_email" class="form-control required user_email">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Role</label>
                                        <select name="user_role" class="form-control default-select required user_role">
                                            <option value="">Choose...</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Voter">Voter</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Password</label>
                                        <input type="password" name="password" class="form-control required password">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Confirm Password</label>
                                        <input type="password" name="re-password" class="form-control required re-password">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>	
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Filter Users</h4>
                    </div>
                    <div class="card-body">
                        <div class="basic-form">
                            <form id="user-filter">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Role</label>
                                        <select name="user_role" class="default-select form-control user_role">
                                            <option value="">All</option>
                                            <option value="Admin">Admin</option>
                                            <option value="Voter">Voter</option>
                                        </select>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>User Status</label>
                                        <select name="user_status" class="default-select form-control user_status">
                                            <option value="">All</option>
                                            <option value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Filter</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Users</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="users" class="display table table-striped" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>SNO</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                        <th>SSN</th>
                                        <th>Role</th>
                                        <th>Created At</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <th>SNO</th>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                        <th>SSN</th>
                                        <th>Role</th>
                                        <th>Created At</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>	
</div>

<script src="/js/pages/admin/users.js"></script>
